<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/splash">

    <fragment android:id="@+id/splash" android:name="com.unter.UnterSplash" android:label="fragment_splash"
              tools:layout="@layout/fragment_unter_splash">
        <action android:id="@+id/action_splash_to_login" app:destination="@id/login"/>
        <action android:id="@+id/action_splash_to_register" app:destination="@id/register"/>
    </fragment>
    <fragment android:id="@+id/login" android:name="com.unter.Login" android:label="fragment_login"
              tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_login_to_home" app:destination="@id/home"/>
        <action android:id="@+id/action_login_self" app:destination="@id/login"/>
    </fragment>
    <fragment android:id="@+id/register" android:name="com.unter.Register" android:label="fragment_register"
              tools:layout="@layout/fragment_register">
        <action android:id="@+id/action_register_to_login" app:destination="@id/login"/>
        <action android:id="@+id/action_register_self" app:destination="@id/register"/>
    </fragment>
    <fragment android:id="@+id/home" android:name="com.unter.Home" android:label="fragment_home"
              tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_home_to_account" app:destination="@id/account"/>
        <action android:id="@+id/action_home_to_journeyRequest" app:destination="@id/journeyRequest"/>
    </fragment>
    <fragment android:id="@+id/account" android:name="com.unter.Account" android:label="fragment_account"
              tools:layout="@layout/fragment_account">
        <action android:id="@+id/action_account_to_home" app:destination="@id/home"/>
        <action android:id="@+id/action_account_to_history" app:destination="@id/history"/>
    </fragment>
    <fragment android:id="@+id/driverInfo" android:name="com.unter.DriverInfo" android:label="fragment_driver_info"
              tools:layout="@layout/fragment_driver_info"/>
    <fragment android:id="@+id/journeyRequest" android:name="com.unter.JourneyRequest"
              android:label="fragment_journey_request" tools:layout="@layout/fragment_journey_request">
        <action android:id="@+id/action_journeyRequest_to_journeyConfirm" app:destination="@id/journeyConfirm"/>
        <action android:id="@+id/action_journeyRequest_to_home" app:destination="@id/home"/>
    </fragment>
    <fragment android:id="@+id/journeyConfirm" android:name="com.unter.JourneyConfirm"
              android:label="fragment_journey_confirm" tools:layout="@layout/fragment_journey_confirm">
        <action android:id="@+id/action_journeyConfirm_to_journeyPrepare" app:destination="@id/journeyPrepare"/>
        <action android:id="@+id/action_journeyConfirm_to_journeyRequest" app:destination="@id/journeyRequest"/>
    </fragment>
    <fragment android:id="@+id/journeyPrepare" android:name="com.unter.JourneyPrepare"
              android:label="fragment_journey_prepare" tools:layout="@layout/fragment_journey_prepare">
        <action android:id="@+id/action_journeyPrepare_to_journeyFulflill" app:destination="@id/journeyFulflill"/>
        <action android:id="@+id/action_journeyPrepare_to_home" app:destination="@id/home"/>
    </fragment>
    <fragment android:id="@+id/journeyFulflill" android:name="com.unter.JourneyFulflill"
              android:label="fragment_journey_fulflill" tools:layout="@layout/fragment_journey_fulflill">
        <action android:id="@+id/action_journeyFulflill_to_journeyComplete" app:destination="@id/journeyComplete"/>
    </fragment>
    <fragment android:id="@+id/journeyComplete" android:name="com.unter.JourneyComplete"
              android:label="fragment_journey_complete" tools:layout="@layout/fragment_journey_complete"/>
    <fragment android:id="@+id/history" android:name="com.unter.History" android:label="fragment_history"
              tools:layout="@layout/fragment_history">
        <action android:id="@+id/action_history_to_driverInfo" app:destination="@id/driverInfo"/>
    </fragment>
</navigation>